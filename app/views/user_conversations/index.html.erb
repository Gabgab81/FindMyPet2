<div class="user_conversations-index">

    <% if @userConversations.count == 0 %>
        <div class="space-between"></div>
        <div class="empty-message">
            <p>You don't have any message yet!</p>
        </div>
        
    <% else %>
        <% @userConversations.each do |userConversation| %>
                <%= render 'shared/card-user-conversation', userConversation: userConversation %>
        <% end %>
    <% end %>


    <div class="space-between"></div>


</div>
