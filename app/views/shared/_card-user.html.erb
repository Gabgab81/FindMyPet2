<div class="card-user">
    <div class="outside-user-img">
        <% if @advert.user.photo.key.nil? %>
            <div class="user-img" style="background-image: url('<%= image_path "logo.jpg" %>'); background-size: cover; background-position: center;">
            </div>
        <% else %>
            <div class="user-img" style="background-image: url('<%= cl_image_path @advert.user.photo.key %>'); background-size: cover; background-position: center;">
            </div>
        <% end %>
    </div>
    
    <div class="info-user">
        <h3><%= @advert.user.name %></h3>
        <p><%= Advert.where(user_id: @advert.user_id).count %> adverts</p>
        <% if !@advert.phone.empty? %>
                <p><i class="fa-solid fa-phone"></i> <%= @advert.phone %></p>
        <% end %>
    </div>
    
</div>