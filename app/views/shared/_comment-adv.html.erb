<div class="comment-adv">
    <div class="simple-form">
        <%= simple_form_for [@advert, @comment], data: {
            insert_in_list_target: "form",
            action: "submit->insert-in-list#send"} do |f| %>
            <%= f.input :content, label: false, placeholder: 'Ajouter un commentaire' %>
            <%= f.submit 'Envoyer' %>
        <% end %>
    </div>
    
</div>
