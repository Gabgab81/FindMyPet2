<div class="show-card">
    <div class="all-img">
        <div class="border-out-img-title">
            <h2><%= advert.type_ad %></h2>
            <div class="img-inside" style="background-image: url('<% if advert.photos.attached? %><%= cl_image_path advert.photos.first.key %><% else %><%= image_path "logo.jpg" %><% end %>'); background-size: cover; background-position: center;">
            </div>
            <div class="title-card">
                <h1><%= advert.name %></h1>
            </div>
        </div>

        <% if @advert.photos.count > 0 %>
            <div class="sub-img-main">
                <% @advert.photos[1..3].each do |photo| %>
                    <div class="sub-img" style="background-image: url('<% if photo %><%= cl_image_path photo.key %><% else %><%= image_path "logo.jpg" %><% end %>'); background-size: cover; background-position: center;">
                    </div>
                <% end %>
            </div>
            
        <% end %>
        
    </div>
    
    <div class="info-big-card">
        <div class="card-content">
            <h3>Description</h3>
            <p><%= advert.content %></p>
        </div>
        <%# <div class="card-address"> %>
        <a href="#map">
            <p><i class="fa-solid fa-location-dot" style="font-size: 20px"></i> <%= advert.address %></p>
        </a>
        <%# </div> %>
    </div>
    
</div>
