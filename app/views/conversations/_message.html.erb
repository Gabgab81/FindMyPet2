<% if message.user == current_user %>
    <div class="message-current">
        <div class="current_user">
            <p> <%= message.content %> </p>
            <p class="date"> <%= message.created_at.strftime("The %A %-d %B %Y") %> </p>
        </div>
    </div>
<% else %>
    <div class="message-not-current">
        <div class="not-current_user">
            <p> <%= message.content %> </p>
            <p class="date"> <%= message.created_at.strftime("The %A %-d %B %Y") %> </p>
        </div>
    </div>
<% end %>
  
